{
  "name": "monkeytype",
  "license": "GPL-3.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "lint": "npm run lint -ws",
    "lint-be": "npm run lint -w frontend",
    "lint-fe": "npm run lint -w backend",
    "install-all": "npm i",
    "install-windows": "npm i",
    "docker": "cd backend && docker compose up",
    "test": "npm run test -ws",
    "test-be": "npm run test -w backend",
    "test-fe": "npm run test -w frontend",
    "dev": "concurrently --kill-others \"wait-for-localhost 5005 && npm run dev -w frontend\" \"npm run dev -w backend\"",
    "dev-be": "npm run dev -w backend",
    "dev-fe": "npm run dev -w frontend",
    "live": "concurrently --kill-others \"npm run live -w frontend\" \"npm run start -w backend\"",
    "audit-fe": "npm run audit -f frontend",
    "release": "release-it -c .release-it.json",
    "release-fe": "release-it -c .release-it-fe.json",
    "hotfix": "npm run deploy-live -w frontend && sh ./bin/purgeCfCache.sh",
    "build-fe": "npm run build -w frontend",
    "pretty": "prettier --check \"./backend/**/*.{ts,json,js,css,html}\" \"./frontend/**/*.{ts,js,scss}\" \"./frontend/static/**/*.{json,html,css}\"",
    "pretty-code": "prettier --check \"./backend/**/*.{ts,js,json,css,html}\" \"./frontend/**/*.{ts,js}\" \"./frontend/src/**/*.scss\"",
    "pretty-code-be": "prettier --check \"./backend/**/*.{ts,js,json,css,html}\"",
    "pretty-code-fe": "prettier --check \"./frontend/**/*.{ts,js}\" \"./frontend/src/**/*.scss\"",
    "pretty-fix": "prettier --write \"./backend/**/*.{ts,json,js,css,html}\" \"./frontend/**/*.{ts,js,scss}\" \"./frontend/static/**/*.{json,html,css}\"",
    "pr-check-lint-json": "cd frontend && eslint './static/**/*.json'",
    "pr-check-quote-json": "cd frontend && npx gulp pr-check-quote-json",
    "pr-check-language-json": "cd frontend && npx gulp pr-check-language-json",
    "pr-check-other-json": "cd frontend && npx gulp pr-check-other-json",
    "pr-check-build-fe": "npm run build -w frontend",
    "pr-check-build-be": "npm run build -w backend"
  },
  "engines": {
    "node": "18.19.1",
    "npm": "10.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@csmith/release-it-calver-plugin": "2023.9.0",
    "@release-it/conventional-changelog": "7.0.0",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "concurrently": "7.2.1",
    "conventional-changelog": "4.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-require-path-exists": "1.1.9",
    "husky": "8.0.1",
    "knip": "2.19.2",
    "lint-staged": "13.2.3",
    "prettier": "2.5.1",
    "release-it": "16.1.4",
    "wait-for-localhost-cli": "3.1.0",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{json,scss,css,html}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "prettier --write",
      "eslint"
    ]
  },
  "version": "24.8.0"
}
